doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="styles/styles.css")
    title Guess Mine
body
    section.login_section
        div.back 환영합니다.
        form.login
            input(type="text" placeholder="write name")
    section.game_section
        div
            canvas#jsCanvas.canvas(width=650 height=650)
            .controls
                .controls__range
                    input#jsRange(type='range' min='1' max='10' value='5' step='1')
                .controls__btns
                    button#jsPaint Paint
                    button#jsFill Fill            
                #jsColors.controls__colors
                    .controls__color(data-number='1' style='background-color: #2c2c2c')
                    .controls__color(data-number='2' style='background-color: white')
                    .controls__color(data-number='3' style='background-color: #ff3b30')
                    .controls__color(data-number='4' style='background-color: #ff9500')
                    .controls__color(data-number='5' style='background-color: #ffcc00')
                    .controls__color(data-number='6' style='background-color: #4cd963')
                    .controls__color(data-number='7' style='background-color: #5ac8fa')
                    .controls__color(data-number='8' style='background-color: #0579ff')
                    .controls__color(data-number='9' style='background-color: #5856d6')
        div.second_column
            div.user_box 유저목록
                ul.user_list
            button.start_btn Game Start
            div.submit
                div.answer_title 정답
                form.answer_form
                    input(type="text" placeholder="정답을 입력하세요")
        div
            ul.chat_box
            form.chat
                input(type="text" placeholder="write message")
    script(src="/socket.io/socket.io.js") 
    script(src="/js/main.js") 